# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown,mdown,markdn}]
indent_size = 4
max_line_length = off
trim_trailing_whitespace = false

# Indentation for all source files
[*.{json,js,jsx,scss,css,html}]
max_line_length = 140
